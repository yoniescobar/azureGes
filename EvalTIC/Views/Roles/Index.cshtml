<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">


@model IEnumerable<EvalTIC.Models.Rol>
@{
    ViewData["Title"] = "Lista de Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3>Lista de Roles</h3>
    </div>
     <div class="col-3">
         <a asp-action="Crear" class="btn btn-primary form-control"><i class="bi bi-person-check-fill"></i> Crear Rol</a>
    </div>
     <div class="col-5">
         <a asp-action="VistaRolesMasivoForm" class="btn btn-primary form-control"><i class="bi bi-file-earmark-plus"></i> Crear Multiples Registros</a>
     </div>
  
</div>

<div>
    @if (Model.Count()>0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Ingrese Rol</th>
                <th></th>
            </tr>
                @foreach (var Rol in Model)
                {
                    <tr>
                        <td>@Rol.Descripcion</td>
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id="@Rol.RolId"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id="@Rol.RolId"><i class="bi bi-trash3-fill"></i>Borrar</a>
                        </td>
                    </tr>
                    
                }
        </table>
    }
    else
    {
        <p>No hay Roles</p>
    }
</div

 <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    