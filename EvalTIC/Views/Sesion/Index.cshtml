@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EvalTIC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EvalTIC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="container">
                <div class="row justify-content-center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12 col-lg-6">
                        <form method="post" asp-action="Index" class="border rounded bg-light p-3 mt-3">
                            <h2 class="text-center">Ingresar</h2>

                            <div class="form-group">
                                <label for="nombre">Correo:</label>

                                <input type="email" class="form-control " name="correo" id="correo" placeholder="Ejem: juanitoperez@gmail.com"
                                       aria-describedby="ayuda-nombre">

                                <small id="ayuda-nombre" class="form-text text-muted">
                                    El usuario asociado a su
                                    cuenta.
                                </small>
                                <span class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label for="password">Contraseña:</label>
                                <input type="password" class="form-control" name="contrasenia" id="contrasenia" aria-describedby="ayuda-password">
                                <small id="ayuda-password" class="form-text text-muted">
                                    Su contraseña debe contener entre 8-20 caracteres.
                                </small>
                                <span class="text-danger"></span>
                            </div>
                            @if (ViewData["MensajeError"] != null)
                            {
                                <span class="text-danger">
                                    @ViewData["MensajeError"]
                                </span>
                            }


                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"><i class="bi bi-person-fill"></i>Ingresar</button>
                            </div>

                        </form>

                    </div>



                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EvalTIC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


</body>
</html>